<%= simple_form_for @comment, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :comment %>
  <%= error_span(@comment[:comment]) %>
  <%= f.input :founded %>
  <%= error_span(@comment[:founded]) %>
  <%= f.input :lost_pet_id %>
  <%= error_span(@comment[:lost_pet_id]) %>
  <%= f.input :user_id %>
  <%= error_span(@comment[:user_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                comments_path, :class => 'btn btn-default' %>
<% end %>
