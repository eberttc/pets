<%= simple_form_for [@user,@profile], :url => user_profiles_path ,:html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@profile[:name]) %>
  <%= f.input :lastname %>
  <%= error_span(@profile[:lastname]) %>
  <%= f.input :address %>
  <%= error_span(@profile[:address]) %>
  <%= f.input :sex ,:collection => ['H', 'M'] , :as => :radio_buttons%>
  <%= error_span(@profile[:sex]) %>
  <%= f.input :user_id , as: :hidden , :input_html => { :value => "#{current_user.id}"}  %>
  <%= error_span(@profile[:user_id]) %>
  <%= f.association :district %>
  <%= error_span(@profile[:district]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_profiles_path(current_user,@profile), :class => 'btn btn-default' %>
<% end %>
