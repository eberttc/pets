<%= simple_form_for @lost_pet, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :status %>
  <%= error_span(@lost_pet[:status]) %>
  <%= f.input :info %>
  <%= error_span(@lost_pet[:info]) %>
  <%= f.input :report_date %>
  <%= error_span(@lost_pet[:report_date]) %>
  <%= f.input :lost_date %>
  <%= error_span(@lost_pet[:lost_date]) %>
  <%= f.input :latitude %>
  <%= error_span(@lost_pet[:latitude]) %>
  <%= f.input :longitude %>
  <%= error_span(@lost_pet[:longitude]) %>
  <%= f.input :found_date %>
  <%= error_span(@lost_pet[:found_date]) %>
  <%= f.input :pet_id %>
  <%= error_span(@lost_pet[:pet_id]) %>
  <%= f.input :user_id %>
  <%= error_span(@lost_pet[:user_id]) %>
  <%= f.input :district_id %>
  <%= error_span(@lost_pet[:district_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lost_pets_path, :class => 'btn btn-default' %>
<% end %>
