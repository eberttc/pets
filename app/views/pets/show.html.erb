<%- model_class = Pet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @pet.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sex) %>:</strong></dt>
  <dd><%= @pet.sex %></dd>
  <dt><strong><%= model_class.human_attribute_name(:race) %>:</strong></dt>
  <dd><%= @pet.race.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
  <dd><%= @pet.age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vaccinated) %>:</strong></dt>
  <dd><%= @pet.vaccinated %></dd>
  <dt><strong><%= model_class.human_attribute_name(:information) %>:</strong></dt>
  <dd><%= @pet.information %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @pet.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pet_type_id) %>:</strong></dt>
  <dd><%= @pet.pet_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @pet.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              user_pets_path(current_user), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_pet_path(current_user,@pet), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_pet_path(current_user,@pet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
